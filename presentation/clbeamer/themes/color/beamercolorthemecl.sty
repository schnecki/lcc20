\mode<all>
\newif\ifcl@lighter

\DeclareOptionBeamer{lighter}[true]{\csname cl@lighter#1\endcsname}
\ProcessOptionsBeamer

\ifcl@lighter%
  \colorlet{cl@red}{red}
  \colorlet{cl@green}{green!50!black}
  \definecolor{cl@darkblue}{rgb}{0.0,0.0,0.5}
  \definecolor{cl@orange}{rgb}{1.0,0.73,0.0}
  \definecolor{cl@blue}{rgb}{0.38,0.38,0.83}
  \definecolor{cl@lightblue}{rgb}{0.9,0.9,0.93}
\else%
  \definecolor{cl@darkblue}{rgb}{0.17,0.333,0.45}
  \definecolor{cl@blue}{rgb}{0.17,0.333,0.45}
  \definecolor{cl@red}{rgb}{0.85,0.10,0.10}
  \definecolor{cl@green}{rgb}{0.3,0.5,0.3}
  \definecolor{cl@orange}{HTML}{F29400}
  \definecolor{cl@lightblue}{HTML}{799BB3}
  \definecolor{cl@gray}{HTML}{EEEEDD}
  \definecolor{cl@lightgreen}{rgb}{0.56,0.7,0.56}
  \setbeamercolor{hrule}{fg=white,bg=cl@lightblue}
  \setbeamercolor{orangeline}{fg=white,bg=cl@orange}
\fi%

